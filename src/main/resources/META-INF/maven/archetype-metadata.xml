<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="basic">.

  <requiredProperties>
    <requiredProperty key="plugin-id">
      <defaultValue>${artifactId}</defaultValue>
    </requiredProperty>
    <requiredProperty key="plugin-name" >
      <defaultValue>${artifactId}</defaultValue>
    </requiredProperty>
    <requiredProperty key="plugin-description" >
      <defaultValue>A plugin for oXygen XML Web Author.</defaultValue>
    </requiredProperty>
    <requiredProperty key="plugin-vendor" >
      <defaultValue>${groupId}</defaultValue>
    </requiredProperty>
  </requiredProperties>

  <fileSets>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>

    <fileSet filtered="true" packaged="false" encoding="UTF-8">
      <directory/>
      <includes>
        <include>web/**</include>
        <include>assembly.xml</include>
        <include>assemblyComponent.xml</include>
        <include>plugin.xml</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
